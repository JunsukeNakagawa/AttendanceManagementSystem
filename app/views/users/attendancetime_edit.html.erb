<!DOCTYPE html>
<html>
<% office_time_total = 0  %>
<% working_days = 0 %>
  <body>
	<table>
	<% current_user=User.find(params[:id]) %>
	<tbody>
		<tr>
			<td><%= link_to "←", attendancetime_edit_path(first_day: @first_day.prev_month) %>
			  <%=  @first_day.year %>年<%=  @first_day.month %>月　時間管理表
			  <%= link_to "→", attendancetime_edit_path(first_day: @first_day.next_month) %></td>
			<td>指定勤務時間: <%= current_user.workingtime.hour if !current_user.workingtime.nil? %>時間</td>
			<td colspan="3">基本時間: <%= current_user.basictime.hour if !current_user.basictime.nil? %>時間</td>
			<td>初日 <%= @first_day.month %>/<%=  @first_day.day %></td>
		</tr>
		<tr>
			<td>所属:</td>
			<td>
				氏名:<%= current_user.name %>
				</td>
			<td>コード</td>
			<td></td>
			<td>出勤日数: 
				<%= Work.where(userid: params[:id] ,day: Time.new(@first_day.year,@first_day.month).all_month).select("leaving_time").count %>日
			</td>
			<td>締め <%=  @first_day.month %>/<%=  @last_day.day %></td>
		</tr>
	</tbody>
</table>
<br>
<br>
<br>
<table>
	<tbody>
		<tr>
			<td rowspan="2">日付</td>
			<td rowspan="2">曜日</td>
			<td colspan="3">出社</td>
			<td colspan="3">退社</td>
			<td rowspan="2">在社時間</td>
			<td rowspan="2">残業指示</td>
			<td rowspan="2">指示書</td>
		</tr>
	</tbody>
</table>
<%= form_for @work, :url => {:action => 'attendancetime_update'}, method: "patch" do |f| %>
<% (@first_day..@last_day).each do |date|%> 
 <table>
	<tbody>
		<tr>
			<td><%= @first_day.month %>/<%= date.day %></td>
			<td>
				<%= %w(日 月 火 水 木 金 土)[date.wday] %></td>
			<td>
				<% if Work.find_by(day: date, userid: current_user.id).nil? %>
					<% work = Work.new(day: date, userid: current_user.id) %>
					<% work.save %>
				<% else %>
					<% work = Work.find_by(day: date, userid: current_user.id) %>
				<% end %>
				<%= f.fields_for "works[]", work do |fi| %>
					<%= fi.time_field :attendance_time, :include_blank => true if work.attendance_time.nil? %>
					<%= fi.time_field :attendance_time, :default => work.attendance_time if !work.attendance_time.nil? %>
				</td>
			<td>
					<%= fi.time_field :leaving_time, :include_blank => true if work.attendance_time.nil? %>
					<%= fi.time_field :leaving_time, :default => work.leaving_time if !work.leaving_time.nil? %>
				<% end %>
			</td>
			<td>
				<% if !work.attendance_time.nil? && !work.leaving_time.nil? %>
					<% office_time = work.leaving_time - work.attendance_time %>
					<% if office_time < 3600 %>
						<% office_time_min = sprintf("%.0f",office_time/60) %>
						<%= office_time_min %>分
					<% elsif office_time > 3600 %>
						<% office_time_hour = sprintf("%.2f",office_time/3600) %>
						<%= office_time_hour %>時間
					<% end %>
					<% office_time_total += office_time.to_i %>
				<% end %>
				</td>
			<td></td>
			<td></td>
		</tr>
	</tbody>
</table>
<% end %>
<br>
<%= f.submit "保存", class: "btn btn-lg btn-primary" %>
<% end %>
<br>
<%= link_to("キャンセル", user_path , class: "btn btn-lg btn-primary") %>
</body>
</html>